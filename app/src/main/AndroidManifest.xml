<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CardHub"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!--
             The API key for Google Maps-based APIs.
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".TradeModeActivity"
            android:exported="false"  />
        <activity
            android:name=".user_profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".card_creation.CardCreationActivity"
            android:exported="false" />
        <activity
            android:name=".inventory.CardActivity"
            android:exported="false" />
        <activity
            android:name=".inventory.InventoryActivity"
            android:exported="false" />
        <activity
            android:name=".PairingModeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cardhub.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cardhub.authentification.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cardhub.authentification.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cardhub.MapActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cardhub.authentification.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>