<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray_1"
    tools:context=".authentication.ForgotPasswordActivity">

    <ScrollView
        android:id="@+id/log_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_email_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="@+id/textView_forgot_message"
                app:layout_constraintStart_toStartOf="@+id/textView_forgot_message"
                app:layout_constraintTop_toBottomOf="@+id/textView_forgot_message" />

            <Button
                android:id="@+id/button_email_forgotten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Send"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/editText_email_forgot"
                app:layout_constraintStart_toStartOf="@+id/editText_email_forgot"
                app:layout_constraintTop_toBottomOf="@+id/editText_email_forgot" />

            <TextView
                android:id="@+id/textView_loginreferral_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Go back to login"
                android:textColor="#2196F3"
                app:layout_constraintEnd_toEndOf="@+id/button_email_forgotten"
                app:layout_constraintStart_toStartOf="@+id/button_email_forgotten"
                app:layout_constraintTop_toBottomOf="@+id/button_email_forgotten" />

            <TextView
                android:id="@+id/textView_forgot_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Send a request to reset your password"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>